{
    "name": "socialdetox.ai",
    "version": "0.0.3",
    "description": "AI agents for social media detox",
    "author": "SocialDetox.ai",
    "license": "Apache-2.0",
    "private": true,
    "main": "run.js",
    "scripts": {
        "format": "prettier --write \"tools/**/*.js\"",
        "lint": "eslint --fix --cache \"tools/**/*.js\"",
        "tag": "node tools/tag",
        "build": "node tools/build"
    },
    "build": {
        "asar": true,
        "appId": "socialdetox.ai",
        "productName": "socialdetox.ai",
        "copyright": "Copyright Â© 2024 SocialDetox.ai",
        "directories": {
            "output": "out"
        },
        "afterPack": "./tools/build-hooks/after-pack.js",
        "files": [
            "!**/CODE-OF-CONDUCT.md",
            "!**/CONTRIBUTING.md",
            "!**/node_modules/**",
            "!**/jsconfig.json",
            "!**/*.config.js",
            "!**/README.md",
            "!**/tools/**",
            "!**/dist/**",
            "!**/.*"
        ],
        "mac": {
            "icon": "dist/res/icons/icon.icns",
            "artifactName": "${productName}-${version}.${ext}",
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.utilities"
        },
        "win": {
            "icon": "dist/res/icons/icon.ico",
            "artifactName": "${productName}-${version}-setup.${ext}",
            "target": "nsis"
        },
        "linux": {
            "icon": "dist/res/icons/icon.png",
            "artifactName": "${productName}-${version}.${ext}",
            "target": "deb",
            "category": "Utility",
            "maintainer": "SocialDetox.ai <hello@socialdetox.ai>",
            "description": "AI agents for social media detox"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "dist/res/icons/icon.ico",
            "uninstallerIcon": "dist/res/icons/icon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "publish": [
            {
                "provider": "github",
                "owner": "socialdetox",
                "repo": "socialdetox-app",
                "releaseType": "release"
            }
        ]
    },
    "devDependencies": {
        "@electron/asar": "^3.2.13",
        "asar": "^3.2.0",
        "cross-spawn": "^7.0.3",
        "electron": "^31.3.0",
        "electron-builder": "^25.0.5",
        "eslint": "^8.21.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "prettier": "^2.7.1"
    }
}
